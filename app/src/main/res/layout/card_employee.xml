<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_parent_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_employee"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/card_background"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/card_background"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Id: "
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/textViewEmployeeId"
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Type: "
                    android:textSize="20dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:id="@+id/textViewEmployeeType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textSize="20dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:id="@+id/textViewEmployeeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOB: "
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/textViewEmployeeDob"
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="DOJ: "
                    android:textSize="14dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:id="@+id/textViewEmployeeDoj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/colorCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: "
                android:textSize="14dp"/>
            <TextView
                android:id="@+id/textViewEmployeePhone"
                android:textColor="@color/colorCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: "
                    android:textSize="14dp"/>
                <TextView
                    android:id="@+id/textViewEmployeeAddress"
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
