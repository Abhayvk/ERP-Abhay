<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/card_parent_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_material"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/card_background"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/card_background"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Material Id: "
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/textViewMaterialId"
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Type: "
                    android:textSize="18dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:id="@+id/textViewMaterialType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description: "
                    android:textSize="18dp"/>
                <TextView
                    android:textColor="@color/colorCardText"
                    android:id="@+id/textViewMaterialDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dimensional Unit: "
                    android:textSize="18dp"/>
                <TextView
                    android:id="@+id/textViewMaterialDu"
                    android:textColor="@color/colorCardText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"/>
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:textColor="@color/colorCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cost/DU: "
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/textViewMaterialCost"
                android:textColor="@color/colorCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"/>
        </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
